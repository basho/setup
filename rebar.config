{brt_protect, true}.

{erl_opts, [
    nowarn_export_all,
    warn_bif_clash,
    warn_export_vars,
    warn_obsolete_guard,
    warn_unused_import
]}.

{profiles, [

    % Dialyzer and Xref.
    {check, [
        {erl_opts, [
            debug_info,
            warnings_as_errors,
            {d, 'BASHO_CHECK'}
        ]},

        {dialyzer, [
            {plt_extra_apps, [
                erts,
                sasl
            ]},
            {warnings, [
                % error_handling,
                race_conditions,
                unknown
                % unmatched_returns
            ]}
        ]},

        {xref_checks, [
            deprecated_function_calls,
            deprecated_functions,
            locals_not_used,
            undefined_function_calls,
            undefined_functions
        ]}
    ]},

    % Default profile when building docs.
    {docs, [
        {deps, [
            {edown,
                {git, "https://github.com/basho/edown.git",
                {branch, "feature/riak-2903/rebar3"} }}
        ]},
        {edoc_opts, [
            {app_default,   "http://www.erlang.org/doc/man"},
            {doclet,        edown_doclet},
            {top_level_readme,
                {"./README.md", "http://github.com/basho/setup"}}
        ]}
    ]},

    % We don't use it as an escript, so these options are encapsulated.
    {escript, [
        {escript_main_app,  setup},
        {escript_name,      setup_gen},
        {provider_hooks,    [{post, [{compile, escriptize}]}]}
    ]},

    % Default profile when built as a dependency.
    {prod, [
        {erl_opts, [
            warnings_as_errors,
            {d, 'BASHO_PROD'}
        ]}
    ]},

    % Default profile when running EUnit or Common Test.
    {test, [
        {cover_enabled, true},
        {erl_opts, [
            debug_info,
            nowarn_deprecated_function,
            nowarn_export_all,
            nowarn_unused_function,
            warnings_as_errors,
            {d, 'BASHO_TEST'}
        ]},
        {eunit_opts,    [verbose]}
    ]},

    % Source analysis only, no beams produced.
    {validate, [
        {erl_opts, [
            no_auto_import,
            strong_validation,
            warn_bif_clash,
            warn_deprecated_function,
            warn_deprecated_type,
            warn_export_all,
            warn_export_vars,
            warn_missing_spec,
            warn_missing_spec_all,
            warn_obsolete_guard,
            warn_shadow_vars,
            warn_untyped_record,
            warn_unused_function,
            warn_unused_import,
            warn_unused_record,
            warn_unused_vars,
            {d, 'BASHO_VALIDATE'}
        ]}
    ]}
]}.

{brt_upstream, [
    {upstream,  {git, "https://github.com/uwiger/setup.git"}},
    {mirror, upstream, master}

]}.

{plugins, [
    {basho_rebar_tools,
        {git, "https://github.com/basho/basho_rebar_tools.git",
        {branch, "master"} }}
]}.

